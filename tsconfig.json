{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/api/*": ["src/app/api/*"],
      "@/styles/*": ["src/styles/*"],
      "@/components/*": ["libs/components/*"],
      "@/queries/*": ["libs/queries/*"],
      "@/constants/*": ["libs/constants/*"],
      "@/models/*": ["libs/models/*"],
      "@/utils/*": ["libs/utils/*"],
      "@/state/*": ["libs/state/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "server/app.js"],
  "exclude": ["node_modules"]
}
